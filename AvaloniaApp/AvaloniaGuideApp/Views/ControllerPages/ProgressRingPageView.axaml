<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:AvaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
			 x:Class="AvaloniaGuideApp.ProgressRingPageView">
	<ScrollViewer Padding="20" >
		<StackPanel Spacing="20">

			<StackPanel Spacing="10">
				<TextBlock Text="Progress Ring Dialog Page"
						   FontWeight="Bold"
						   FontSize="24"/>
				<Separator/>
			</StackPanel>

			<StackPanel VerticalAlignment="Center"
						Spacing="20">
				<Button Name="btnShowProgressRing"
						Content="Show Progress Ring Dialog"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Click="btnShowProgressRing_Click"/>


			</StackPanel>
			<AvaloniaEdit:TextEditor Name="splashCodeEditor"
									 Margin="20 0"
									 Height="600"
									 BorderThickness="5"
									 BorderBrush="Gray"
									 Padding="10"
									 IsReadOnly="True"
									 FontFamily="Cascadia Code,Consolas,Menlo,Monospace"
									 FontSize="14"/>
		</StackPanel>

	</ScrollViewer>
</UserControl>
